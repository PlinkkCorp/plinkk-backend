    <script>
      const btn = document.getElementById('menuBtn');
      const menu = document.getElementById('mobileMenu');
      if (btn && menu) { btn.addEventListener('click', ()=> { menu.classList.toggle('hidden'); }); }
      // Tabs aperçu héro
      const snapImg = document.getElementById('snapImage');
      const snapTabs = document.querySelectorAll('.snap-tab');
      const snapMap = { editor: '/public/images/landing/editor.svg', profile: '/public/images/landing/profile.svg', dashboard: '/public/images/landing/dashboard.svg' };
      // Précharge les images pour un switch instantané
      Object.values(snapMap).forEach((url)=>{ const img = new Image(); img.src = url; });
      if (snapTabs && snapTabs.length && snapImg) {
        snapTabs.forEach(t => t.addEventListener('click', () => {
          snapTabs.forEach(x => x.classList.remove('bg-slate-900/60','border','border-slate-800/60','text-slate-200'));
          snapTabs.forEach(x => x.setAttribute('aria-selected','false'));
          t.classList.add('bg-slate-900/60','border','border-slate-800/60','text-slate-200');
          t.setAttribute('aria-selected','true');
          const key = t.getAttribute('data-snap');
          const src = snapMap[key] || snapMap.editor;
          // Ajoute un cache-busting pour forcer la mise à jour du SVG
          snapImg.src = src + '?v=' + Date.now();
        }));
      }
    </script>

