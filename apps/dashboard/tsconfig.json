{
    "compilerOptions": {
        "noEmitOnError": false,
        "skipLibCheck": true,
        "strict": false,
        "moduleResolution": "node16",
        "types": ["node"],
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "lib": ["ES2021", "DOM"],
        "module": "node16",
        "target": "es2022",
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "preserveSymlinks": true
    },
    "include": ["src"],
    "exclude": ["dist", "src/public"]
}