FROM node:24-alpine

RUN apk add --no-cache \
    openssl \
    libc6-compat \
    bash \
    python3 \
    make \
    g++ \
    cairo-dev \
    pango-dev \
    jpeg-dev \
    giflib-dev \
    pixman-dev \
    pangomm-dev

WORKDIR /app

COPY . .

RUN npm install -g pnpm@9.12.3

ENV CI=true

RUN pnpm install

RUN pnpm --filter @plinkk/prisma run generate

RUN pnpx @fastify/secure-session > apps/dashboard/src/secret-key

RUN pnpm --filter @plinkk/dashboard run build

CMD ["sh", "-c", "pnpm --filter @plinkk/prisma run generate && pnpm --filter @plinkk/prisma run deploy && pnpm --filter @plinkk/prisma run seed && pnpm --filter @plinkk/dashboard run start"]

EXPOSE 3001