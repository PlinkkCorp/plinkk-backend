<!-- Comparison Table -->
<div
    style="background: rgba(15, 23, 42, 0.4); backdrop-filter: blur(20px); border: 1px solid rgba(255, 255, 255, 0.08); border-radius: 24px; overflow: hidden; box-shadow: 0 30px 60px -15px rgba(0,0,0,0.6), inset 0 1px 0 rgba(255,255,255,0.1);">

    <!-- HEADER -->
    <div
        style="padding: 32px; border-bottom: 1px solid rgba(255,255,255,0.05); background: radial-gradient(circle at top left, rgba(139, 92, 246, 0.1), transparent 50%); position: relative;">
        <div style="display: flex; align-items: center; gap: 16px;">
            <div
                style="width: 48px; height: 48px; border-radius: 14px; background: linear-gradient(135deg, rgba(139,92,246,0.2), rgba(192,38,211,0.2)); display: flex; align-items: center; justify-content: center; border: 1px solid rgba(139,92,246,0.3); box-shadow: 0 0 20px rgba(139,92,246,0.15), inset 0 2px 4px rgba(255,255,255,0.1);">
                <svg style="width: 24px; height: 24px; color: #d8b4fe;" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
            </div>
            <div>
                <h2 style="font-size: 20px; font-weight: 700; color: #fff; letter-spacing: -0.01em; margin: 0;">
                    Comparaison détaillée</h2>
                <p style="font-size: 14px; color: rgba(255,255,255,0.5); margin: 4px 0 0 0;">Découvrez tout ce qui est
                    inclus dans chaque offre.</p>
            </div>
        </div>
    </div>

    <!-- TABLE -->
    <div style="overflow-x: auto;">
        <table style="width: 100%; font-size: 14px; border-collapse: separate; border-spacing: 0;">
            <thead>
                <tr>
                    <th
                        style="text-align: left; padding: 20px 32px; color: rgba(255,255,255,0.4); font-weight: 600; font-size: 12px; text-transform: uppercase; letter-spacing: 0.05em; border-bottom: 1px solid rgba(255, 255, 255, 0.06);">
                        Fonctionnalité
                    </th>
                    <th
                        style="text-align: center; padding: 20px 24px; color: rgba(255,255,255,0.4); font-weight: 600; font-size: 13px; width: 140px; border-bottom: 1px solid rgba(255, 255, 255, 0.06); text-transform: uppercase; letter-spacing: 0.05em;">
                        Gratuit
                    </th>
                    <!-- Premium Column Header -->
                    <th
                        style="position: relative; text-align: center; padding: 20px 24px; width: 160px; background: linear-gradient(180deg, rgba(139,92,246,0.12) 0%, rgba(139,92,246,0.03) 100%); border-top: 2px solid #a855f7; border-left: 1px solid rgba(139,92,246,0.3); border-right: 1px solid rgba(139,92,246,0.3); border-bottom: 1px solid rgba(139,92,246,0.2); border-top-left-radius: 12px; border-top-right-radius: 12px; box-shadow: inset 0 2px 10px rgba(168,85,247,0.1);">
                        <div
                            style="position: absolute; top: -2px; left: 0; right: 0; height: 2px; background: linear-gradient(90deg, transparent, #c084fc, transparent); box-shadow: 0 0 12px #c084fc;">
                        </div>
                        <span
                            style="background: linear-gradient(135deg, #c084fc, #f472b6); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-weight: 800; font-size: 15px; letter-spacing: 0.02em; text-transform: uppercase;">Premium</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                <!-- Rows generation -->
                <% const rows=[ { title: "Pages Plinkk" ,
                    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 13a5 5 0 007.54.54l3-3a5 5 0 00-7.07-7.07l-1.72 1.71M14 11a5 5 0 00-7.54-.54l-3 3a5 5 0 007.07 7.07l1.71-1.71" />'
                    , free: "1" , premium: "2" }, { title: "Redirections" ,
                    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3" />'
                    , free: "5" , premium: "10" }, { title: "Historique statistiques" ,
                    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3v18h18M18 17V9M13 17V5M8 17v-3" />'
                    , free: "30j" , premium: "365j" }, { title: "Tendances détaillées & Exports" ,
                    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />'
                    , free: "x" , premium: "v" }, { title: "Précision avancée (heure, minute, seconde)" ,
                    icon: '<circle cx="12" cy="12" r="3" /><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 2.83-2.83l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 2.83l-.06.06A1.65 1.65 0 0 0 19.4 9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z" />'
                    , free: "x" , premium: "v" }, { title: "Sélecteur de dates avancé" ,
                    icon: '<rect x="3" y="4" width="18" height="18" rx="2" ry="2" /><line x1="16" y1="2" x2="16" y2="6" /><line x1="8" y1="2" x2="8" y2="6" /><line x1="3" y1="10" x2="21" y2="10" />'
                    , free: "x" , premium: "v" }, { title: "Tunnel d'acquisition" ,
                    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />'
                    , free: "x" , premium: "v" }, { title: "Création de thèmes personnalisés" ,
                    icon: '<rect x="3" y="3" width="8" height="8" rx="1.5" opacity=".9" /><rect x="13" y="3" width="8" height="8" rx="1.5" opacity=".6" /><rect x="3" y="13" width="8" height="8" rx="1.5" opacity=".6" /><rect x="13" y="13" width="8" height="8" rx="1.5" opacity=".3" />'
                    , free: "10" , premium: "20" , customIcon: true }, { title: "Cosmétiques : Bannières GIF / Image" ,
                    icon: '<rect x="3" y="3" width="18" height="18" rx="2" ry="2" /><circle cx="8.5" cy="8.5" r="1.5" /><polyline points="21 15 16 10 5 21" />'
                    , free: "x" , premium: "v" }, { title: "Plinkk protégé par mot de passe" ,
                    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />'
                    , free: "x" , premium: "v" }, { title: "Liens programmés" ,
                    icon: '<circle cx="12" cy="12" r="10" /><polyline points="12 6 12 12 16 14" />' , free: "v" ,
                    premium: "v" }, { title: "Export CSV" ,
                    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4M7 10l5 5 5-5M12 15V3" />'
                    , free: "x" , premium: "v" }, { title: "Support prioritaire" ,
                    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />'
                    , free: "x" , premium: "v" , isLast: true } ]; %>
                    <% rows.forEach(row=> { %>
                        <tr class="comparison-row hover-highlight" style="transition: all 0.2s;">
                            <td
                                style="padding: 16px 32px; color: rgba(255,255,255,0.85); display: flex; align-items: center; gap: 14px; font-weight: 500; border-bottom: <%= row.isLast ? 'none' : '1px solid rgba(255,255,255,0.03)' %>;">
                                <div
                                    style="padding: 6px; border-radius: 8px; background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.05); box-shadow: 0 2px 5px rgba(0,0,0,0.2);">
                                    <svg style="width: 16px; height: 16px; color: #a78bfa;" <%- row.customIcon
                                        ? 'viewBox="0 0 24 24" fill="currentColor"'
                                        : 'fill="none" stroke="currentColor" viewBox="0 0 24 24"' %>>
                                        <%- row.icon %>
                                    </svg>
                                </div>
                                <%= row.title %>
                            </td>
                            <td
                                style="text-align: center; padding: 16px 24px; color: rgba(255,255,255,0.4); font-weight: 500; border-bottom: <%= row.isLast ? 'none' : '1px solid rgba(255,255,255,0.03)' %>;">
                                <% if (row.free==='x' || row.free==='X' ) { %>
                                    <svg style="width:18px;height:18px;color:rgba(255,255,255,0.15);margin:0 auto;"
                                        fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                    <% } else if (row.free==='v' || row.free==='V' ) { %>
                                        <svg style="width:20px;height:20px;color:rgba(255,255,255,0.6);margin:0 auto;"
                                            fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                                d="M5 13l4 4L19 7" />
                                        </svg>
                                        <% } else { %>
                                            <%= row.free %>
                                                <% } %>
                            </td>
                            <td
                                style="position: relative; text-align: center; padding: 16px 24px; color: #fff; font-weight: 700; font-size: 15px; background: rgba(139,92,246,0.06); border-left: 1px solid rgba(139,92,246,0.2); border-right: 1px solid rgba(139,92,246,0.2); border-bottom: <%= row.isLast ? '1px solid rgba(139,92,246,0.3); border-bottom-left-radius: 12px; border-bottom-right-radius: 12px;' : '1px solid rgba(139,92,246,0.1);' %>">
                                <div style="position: absolute; inset: 0; background: linear-gradient(90deg, transparent, rgba(255,255,255,0.02), transparent); opacity: 0; transition: opacity 0.3s;"
                                    class="premium-hover-glow"></div>
                                <span
                                    style="position: relative; z-index: 1; text-shadow: 0 2px 10px rgba(168,85,247,0.4);">
                                    <% if (row.premium==='v' ) { %>
                                        <svg style="width:20px;height:20px;color:#c084fc;margin:0 auto;filter: drop-shadow(0 0 4px rgba(192,132,252,0.6));"
                                            fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3"
                                                d="M5 13l4 4L19 7" />
                                        </svg>
                                        <% } else { %>
                                            <span style="color:#f3e8ff;">
                                                <%= row.premium %>
                                            </span>
                                            <% } %>
                                </span>
                            </td>
                        </tr>
                        <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Note extensions -->
    <div
        style="padding: 24px 32px; background: linear-gradient(to right, rgba(139,92,246,0.05), transparent); border-top: 1px solid rgba(255,255,255,0.05);">
        <div style="display: flex; align-items: flex-start; gap: 14px;">
            <div
                style="width: 36px; height: 36px; border-radius: 12px; background: linear-gradient(135deg, rgba(139,92,246,0.2), rgba(192,38,211,0.1)); display: grid; place-items: center; flex-shrink: 0; border: 1px solid rgba(139,92,246,0.2);">
                <svg style="width: 18px; height: 18px; color: #c084fc;" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <p style="font-size: 14px; color: rgba(255,255,255,0.6); line-height: 1.6; margin: 0; padding-top: 6px;">
                <strong style="color: #fff; font-weight: 700;">Besoin de plus ?</strong> Avec le Premium, ajoutez des
                pages Plinkk supplémentaires (1€/page/mois) et des packs de 5 redirections (1€/pack/mois) selon vos
                besoins.
            </p>
        </div>
    </div>

    <!-- CTA Passer à Premium -->
    <div
        style="padding: 28px 32px; border-top: 1px solid rgba(255,255,255,0.05); text-align: center; background: rgba(0,0,0,0.1);">
        <a href="<%= typeof pricingContext !== 'undefined' && (pricingContext === 'dashboard-preview' || pricingContext === 'dashboard-config') ? '/premium/configure' : (typeof dashboardUrl !== 'undefined' ? dashboardUrl : '') + '/premium/configure' %>"
            class="premium-cta-btn"
            style="display: inline-flex; justify-content: center; align-items: center; gap: 10px; padding: 14px 40px; border-radius: 14px; background: linear-gradient(135deg, #8b5cf6, #d946ef); color: #fff; font-weight: 700; font-size: 15px; text-decoration: none; transition: all 0.3s; box-shadow: 0 8px 15px rgba(139,92,246,0.25), inset 0 2px 4px rgba(255,255,255,0.2);">
            <svg style="width: 20px; height: 20px;" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
            </svg>
            Débloquer le Premium
        </a>
    </div>

</div>
<style>
    .hover-highlight:hover {
        background: rgba(255, 255, 255, 0.02);
    }

    .hover-highlight:hover .premium-hover-glow {
        opacity: 1 !important;
    }

    .premium-cta-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 25px rgba(139, 92, 246, 0.4), inset 0 2px 4px rgba(255, 255, 255, 0.3) !important;
    }
</style>