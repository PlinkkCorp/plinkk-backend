                    } else {
                        adminAvatar.textContent = (userName || '?').charAt(0).toUpperCase();
                        adminAvatar.className = "w-14 h-14 rounded-2xl bg-blue-600/10 flex items-center justify-center text-xl font-black text-blue-400 border border-blue-500/20 shadow-lg";
                    }
                } else {
                    adminAvatar.textContent = (userName || '?').charAt(0).toUpperCase();
                    adminAvatar.className = "w-14 h-14 rounded-2xl bg-blue-600/10 flex items-center justify-center text-xl font-black text-blue-400 border border-blue-500/20 shadow-lg";
                }

                document.getElementById('modalAction').textContent = log.action;
                document.getElementById('modalTarget').textContent = log.targetId || 'N/A';

                const targetInfo = document.getElementById('modalTargetUserInfo');
                if (log.targetUser) {
                    targetInfo.classList.remove('hidden');
                    const u = log.targetUser;
                    document.getElementById('modalTargetName').textContent = u.userName || u.name || 'Inconnu';
                    document.getElementById('modalTargetEmail').textContent = u.email || 'Pas d\'email';
                    const targetLink = document.getElementById('modalTargetLink');
                    targetLink.onclick = (e) => { e.preventDefault(); um.open(u.id); };
                    const avatar = document.getElementById('modalTargetAvatar');
                    const placeholder = document.getElementById('modalTargetAvatarPlaceholder');
                    if (u.image) { avatar.src = u.image; avatar.classList.remove('hidden'); placeholder.classList.add('hidden'); }
                    else { avatar.classList.add('hidden'); placeholder.classList.remove('hidden'); placeholder.textContent = (u.userName || u.name || '?').charAt(0).toUpperCase(); }
                } else { targetInfo.classList.add('hidden'); }

                const jsonContainer = document.getElementById('modalJson');
                jsonContainer.innerHTML = '';
                const details = log.details || {};

                // Handle explicit "changes" array from logDetailedAction
                if (Array.isArray(details.changes) && details.changes.length > 0) {
                    const changesDiv = document.createElement('div');
                    changesDiv.className = 'flex flex-col gap-2 mb-4';

                    const title = document.createElement('div');
                    title.className = 'text-[10px] text-slate-500 uppercase font-black tracking-widest font-mono opacity-80 mb-1';
                    title.textContent = 'Modifications';
                    changesDiv.appendChild(title);

                    details.changes.forEach(changeStr => {
                        const item = document.createElement('div');
                        item.className = 'bg-slate-900/40 rounded-xl p-3 border border-slate-800/50 flex items-center text-xs font-mono text-slate-300';

                        // Parse "key: old -> new" if possible for better styling
                        const parts = changeStr.match(/^([^:]+):\s*(.*)\s*->\s*(.*)$/);
                        if (parts) {
                            item.innerHTML = `
                        <span class="font-bold text-violet-400 mr-2">${parts[1]}</span>
                        <span class="text-rose-400/80 line-through mr-2 opacity-70">${parts[2]}</span>
                        <span class="text-slate-500 mr-2">➜</span>
                        <span class="text-emerald-400 font-bold">${parts[3]}</span>
                    `;
                        } else {
                            item.textContent = changeStr;
                        }
                        changesDiv.appendChild(item);
                    });
                    jsonContainer.appendChild(changesDiv);
                }

                // Handle legacy "Old -> New" object structure (e.g. { key: { old: ..., new: ... } })
                const legacyChanges = Object.keys(details).filter(k =>
                    details[k] && typeof details[k] === 'object' && 'old' in details[k] && 'new' in details[k]
                );

                if (legacyChanges.length > 0) {
                    const legacyDiv = document.createElement('div');
                    legacyDiv.className = 'flex flex-col gap-2 mb-4';

                    if (!Array.isArray(details.changes)) { // Only add title if not already shown above
                        const title = document.createElement('div');
                        title.className = 'text-[10px] text-slate-500 uppercase font-black tracking-widest font-mono opacity-80 mb-1';
                        title.textContent = 'Modifications (Détail)';
                        legacyDiv.appendChild(title);
                    }

                    legacyChanges.forEach(key => {
                        const change = details[key];
                        const item = document.createElement('div');
                        item.className = 'bg-slate-900/40 rounded-xl p-3 border border-slate-800/50 text-xs font-mono text-slate-300';

                        const oldVal = typeof change.old === 'object' ? JSON.stringify(change.old) : String(change.old);
                        const newVal = typeof change.new === 'object' ? JSON.stringify(change.new) : String(change.new);

                        item.innerHTML = `
                    <span class="font-bold text-violet-400 mr-2">${key}</span>
                    <div class="mt-1 pl-2 border-l-2 border-slate-800">
                        <div class="flex items-start gap-2">
                             <span class="text-rose-500 w-4">-</span>
                             <span class="text-rose-400/80 break-all">${oldVal}</span>
                        </div>
                        <div class="flex items-start gap-2 mt-1">
                             <span class="text-emerald-500 w-4">+</span>
                             <span class="text-emerald-400 font-bold break-all">${newVal}</span>
                        </div>
                    </div>
                 `;
                        legacyDiv.appendChild(item);
                    });
                    jsonContainer.appendChild(legacyDiv);
                }

                // Handle Export Options (included)
                if (details.included && typeof details.included === 'object') {
                    const exportDiv = document.createElement('div');
                    exportDiv.className = 'flex flex-col gap-2 mb-4';

                    const title = document.createElement('div');
                    title.className = 'text-[10px] text-slate-500 uppercase font-black tracking-widest font-mono opacity-80 mb-1';
                    title.textContent = 'Options d\'Export';
                    exportDiv.appendChild(title);

                    const options = details.included;
                    const grid = document.createElement('div');
                    grid.className = 'grid grid-cols-2 gap-2';

                    Object.entries(options).forEach(([key, value]) => {
                        const item = document.createElement('div');
                        item.className = `px-3 py-2 rounded-xl border border-slate-800/50 flex items-center justify-between ${value ? 'bg-emerald-500/10 text-emerald-400' : 'bg-rose-500/10 text-rose-400'}`;

                        const label = key === 'images' ? 'Images' : key === 'icons' ? 'Icônes' : key === 'canva' ? 'Canva' : key;

                        item.innerHTML = `
                            <span class="text-xs font-bold">${label}</span>
                            ${value ?
                                '<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>' :
                                '<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>'
                            }
                         `;
                        grid.appendChild(item);
                    });
                    exportDiv.appendChild(grid);
                    jsonContainer.appendChild(exportDiv);
                }

                // Other details (exclude handled keys)
                const ignoredKeys = ['changes', 'formatted', 'diff', 'category', 'targetUser', 'included', ...legacyChanges];
                const otherKeys = Object.keys(details).filter(k => !ignoredKeys.includes(k));

                // Cosmetic Fields Grouping
                if (otherKeys.length > 0) {
                    const cosmeticFields = [
                        'neonEnable', 'buttonThemeEnable', 'EnableAnimationArticle', 'EnableAnimationButton',
                        'EnableAnimationBackground', 'backgroundSize', 'selectedAnimationIndex',
                        'selectedAnimationButtonIndex', 'selectedAnimationBackgroundIndex',
                        'animationDurationBackground', 'delayAnimationButton', 'canvaEnable',
                        'selectedCanvasIndex', 'profileHoverColor', 'degBackgroundColor'
                    ];

                    const cosmeticLabels = {
                        'neonEnable': 'Néons',
                        'buttonThemeEnable': 'Thème Boutons',
                        'EnableAnimationArticle': 'Anim. Article',
                        'EnableAnimationButton': 'Anim. Bouton',
                        'EnableAnimationBackground': 'Anim. Fond',
                        'backgroundSize': 'Taille Fond',
                        'selectedAnimationIndex': 'Animation',
                        'selectedAnimationButtonIndex': 'Anim. Btn (Type)',
                        'selectedAnimationBackgroundIndex': 'Anim. Fond (Type)',
                        'animationDurationBackground': 'Durée Anim. Fond',
                        'delayAnimationButton': 'Délai Anim. Btn',
                        'canvaEnable': 'Canva',
                        'selectedCanvasIndex': 'Canva (Type)',
                        'profileHoverColor': 'Couleur Survol (Profil)',
                        'degBackgroundColor': 'Dégradé Fond'
                    };

                    const cosmeticChanges = otherKeys.filter(k => cosmeticFields.includes(k));
                    const remainingKeys = otherKeys.filter(k => !cosmeticFields.includes(k));

                    if (cosmeticChanges.length > 0) {
                        const cosmeticDiv = document.createElement('div');
                        cosmeticDiv.className = 'flex flex-col gap-2 mt-4 pt-4 border-t border-slate-800/50';

                        const title = document.createElement('div');
                        title.className = 'text-[10px] text-slate-500 uppercase font-black tracking-widest font-mono opacity-80 mb-1 flex items-center gap-2';
                        title.innerHTML = `
                            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                            </svg>
                            Apparence & Cosmétiques
                        `;
                        cosmeticDiv.appendChild(title);

                        const grid = document.createElement('div');
                        grid.className = 'grid grid-cols-2 sm:grid-cols-3 gap-2';

                        cosmeticChanges.forEach(key => {
                            const val = details[key];
                            const label = cosmeticLabels[key] || key;
                            const item = document.createElement('div');
                            // Check if boolean-ish (0/1 or true/false)
                            const isBool = val === 0 || val === 1 || val === true || val === false || val === '0' || val === '1';
                            const isTrue = val === 1 || val === true || val === '1';

                            item.className = `px-3 py-2 rounded-xl border border-slate-800/50 flex flex-col justify-center ${isBool ? (isTrue ? 'bg-emerald-500/5 border-emerald-500/10' : 'bg-slate-800/20') : 'bg-slate-900/40'}`;

                            let valDisplay = val;
                            if (isBool) {
                                valDisplay = isTrue ?
                                    '<div class="flex items-center gap-1.5 text-emerald-400 font-bold text-xs"><div class="w-1.5 h-1.5 rounded-full bg-emerald-500"></div>Activé</div>' :
                                    '<div class="flex items-center gap-1.5 text-slate-500 font-medium text-xs"><div class="w-1.5 h-1.5 rounded-full bg-slate-600"></div>Désactivé</div>';
                            } else {
                                // Color preview if it looks like a color
                                if (typeof val === 'string' && (val.startsWith('#') || val.startsWith('rgb'))) {
                                    valDisplay = `<div class="flex items-center gap-2"><div class="w-3 h-3 rounded-full border border-slate-700 shadow-sm" style="background:${val}"></div><span class="font-mono text-slate-300 text-xs">${val}</span></div>`;
                                } else {
                                    valDisplay = `<span class="font-mono text-slate-300 text-xs break-all">${val}</span>`;
                                }
                            }

                            item.innerHTML = `
                                <span class="text-[9px] font-bold text-slate-500 uppercase mb-1 tracking-wider">${label}</span>
                                ${typeof valDisplay === 'string' ? valDisplay : ''}
                            `;
                            grid.appendChild(item);
                        });
                        cosmeticDiv.appendChild(grid);
                        jsonContainer.appendChild(cosmeticDiv);
                    }

                    if (remainingKeys.length > 0) {
                        const rawDetailsContainer = document.createElement('div');
                        rawDetailsContainer.className = 'mt-4 pt-4 border-t border-slate-800/50';

                        const toggleBtn = document.createElement('button');
                        toggleBtn.className = 'flex items-center gap-2 text-[10px] text-slate-500 uppercase font-black tracking-widest font-mono opacity-60 hover:opacity-100 transition-opacity mb-3 w-full text-left';
                        toggleBtn.innerHTML = `
                            <span>Données brutes additionnelles</span>
                            <svg class="w-3 h-3 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                        `;

                        const contentDiv = document.createElement('div');
                        contentDiv.className = 'hidden grid grid-cols-1 gap-2';

                        toggleBtn.onclick = () => {
                            contentDiv.classList.toggle('hidden');
                            toggleBtn.querySelector('svg').classList.toggle('rotate-180');
                        };

                        remainingKeys.forEach(key => {
                            const value = details[key];
                            const item = document.createElement('div');
                            item.className = 'bg-slate-950/30 rounded-lg p-3 border border-slate-800/30 flex flex-col gap-1';
                            item.innerHTML = `
                        <div class="text-[9px] text-slate-600 uppercase font-bold tracking-wider">${key}</div>
                        <div class="text-slate-400 font-mono text-xs break-all whitespace-pre-wrap">${typeof value === 'object' ? JSON.stringify(value, null, 2) : value}</div>
                    `;
                            contentDiv.appendChild(item);
                        });

                        rawDetailsContainer.appendChild(toggleBtn);
                        rawDetailsContainer.appendChild(contentDiv);
                        jsonContainer.appendChild(rawDetailsContainer);
                    }

                    if (remainingKeys.length > 0 || cosmeticChanges.length > 0) {
                        document.getElementById('copyJsonBtn').parentElement.classList.remove('hidden');
                    }
                    // End Cosmetic Fields Grouping
                } else {
                    // If we displayed changes but no other keys, keep copy button visible but maybe no "raw data" section
                    if (legacyChanges.length === 0 && (!Array.isArray(details.changes) || details.changes.length === 0)) {
                        jsonContainer.innerHTML += '<div class="flex flex-col items-center justify-center py-8 opacity-20 text-xs font-bold uppercase italic tracking-widest">Aucune donnée supplémentaire</div>';
                        document.getElementById('copyJsonBtn').parentElement.classList.add('hidden');
                    } else {
                        document.getElementById('copyJsonBtn').parentElement.classList.remove('hidden');
                    }
                }
                document.getElementById('logDetailsModal').classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            }

            function closeLogDetails() {
                document.getElementById('logDetailsModal').classList.add('hidden');
                document.body.style.overflow = 'auto';
            }

            async function loadLogs() {
                const tbody = document.getElementById('logsTableBody');
                renderSkeleton();
                const adminId = document.getElementById('filterAdmin').value;
                const targetId = document.getElementById('filterTarget').value;
                const action = document.getElementById('filterAction').value;
                const from = document.getElementById('filterFrom').value;
                const to = document.getElementById('filterTo').value;
                const sort = document.getElementById('sortOrder').value;

                const params = new URLSearchParams({ page: currentPage, limit: limit, sort: sort });
                if (adminId) params.append('adminId', adminId);
                if (targetId) params.append('targetId', targetId);
                if (action) params.append('action', action);
                if (from) params.append('from', from);
                if (to) params.append('to', to);

                try {
                    const endpoint = currentTab === 'admin' ? '/admin/logs/api' : '/admin/logs/user-api';
                    const res = await fetch(`${endpoint}?${params.toString()}`);
                    if (!res.ok) {
                        const text = await res.text();
                        throw new Error(`Statut ${res.status}: ${text.substring(0, 100)}`);
                    }
                    const data = await res.json();
                    currentLogs = data.logs;
                    if (data.logs.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="7" class="px-6 py-8 text-center text-slate-500">Aucun log trouvé.</td></tr>';
                        return;
                    }
                    tbody.innerHTML = data.logs.map((log, index) => {
                        const userId = currentTab === 'admin' ? log.adminId : log.userId;
                        let targetDisplay = '-';

                        if (log.targetUser) {
                            const name = log.targetUser.userName || log.targetUser.name || 'Utilisateur';
                            const targetId = log.targetUser.id || log.targetId;
                            targetDisplay = `
                        <div class="flex items-center gap-2 cursor-pointer group/target" onclick="event.stopPropagation(); um.open('${targetId}')">    
                            <div class="w-5 h-5 rounded-full bg-slate-800 flex items-center justify-center text-[8px] font-bold overflow-hidden border border-slate-700/50 group-hover/target:border-blue-500 transition-colors">
                                ${log.targetUser.image ? `<img src="${log.targetUser.image}" class="w-full h-full object-cover no-invert">` : (name || '?').charAt(0).toUpperCase()}
                            </div>
                            <span class="max-w-[120px] truncate group-hover/target:text-blue-400 transition-colors">${name}</span>
                        </div>
                    `;
                        } else if (log.targetId) {
                            targetDisplay = `<span class="text-slate-500 font-mono text-[10px] italic cursor-pointer hover:text-blue-400 transition-colors" onclick="event.stopPropagation(); um.open('${log.targetId}')">${log.targetId}</span>`;
                        }

                        const uName = (currentTab === 'admin' ? log.adminName : log.userName) || log.userId || log.adminId || 'Inconnu';
                        const uImage = currentTab === 'admin' ? log.adminImage : log.userImage;

                        let detailsCount = 0;
                        try {
                            detailsCount = (log.details && typeof log.details === 'object') ? Object.keys(log.details).length : 0;
                        } catch (err) { console.warn("Erreur détails log:", err); }

                        return `
                    <tr class="hover:bg-slate-800/50 transition-colors border-b border-slate-800/30 last:border-0" onclick="openLogDetails(${index})">
                        <td class="px-6 py-4 whitespace-nowrap text-slate-500 font-mono text-[11px]">${log.createdAt ? new Date(log.createdAt).toLocaleString() : '-'}</td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2 cursor-pointer group/source" onclick="event.stopPropagation(); um.open('${userId}')">
                                <div class="w-7 h-7 rounded-lg bg-slate-800 flex items-center justify-center text-[10px] font-bold overflow-hidden border border-slate-700/50 shadow-inner group-hover/source:border-blue-500 transition-colors">
                                    ${uImage ? `<img src="${uImage}" class="w-full h-full object-cover no-invert">` : (uName || '?').charAt(0).toUpperCase()}
                                </div>
                                <span class="text-white text-sm font-medium tracking-tight group-hover/source:text-blue-400 transition-colors">${uName}</span>
                            </div>
                        </td>
                        <td class="px-6 py-4"><span class="px-2.5 py-1 rounded-lg bg-violet-600/10 border border-violet-500/20 text-[10px] font-bold font-mono text-violet-400 tracking-wider">${log.action || 'ACTION'}</span></td>
                        <td class="px-6 py-4 text-slate-400 font-mono text-xs">${targetDisplay}</td>
                        <td class="px-6 py-4"><div class="flex items-center gap-1.5 text-slate-500 text-[10px]"><span class="w-1.5 h-1.5 rounded-full ${detailsCount > 0 ? 'bg-emerald-500' : 'bg-slate-700'}"></span>${detailsCount > 0 ? 'Détails dispos' : 'Aucun détail'}</div></td>
                        <td class="px-6 py-4 text-slate-500 font-mono text-[10px]">${log.ip || '-'}</td>
                        <td class="px-6 py-4 text-right"><button class="p-2 hover:bg-slate-700 rounded-lg text-slate-500 hover:text-white transition-all"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg></button></td>
                    </tr>
                `;
                    }).join('');
                    const totalPages = Math.ceil(data.total / limit);
                    document.getElementById('pageInfo').textContent = `Page ${currentPage} / ${totalPages || 1}`;
                    document.getElementById('prevPage').disabled = currentPage <= 1;
                    document.getElementById('nextPage').disabled = currentPage >= totalPages;
                } catch (e) {
                    console.error('Erreur logs:', e);
                    tbody.innerHTML = `<tr><td colspan="7" class="px-6 py-8 text-center text-rose-500">Erreur lors du chargement des logs: ${e.message}</td></tr>`;
                }
            }

            document.getElementById('prevPage').addEventListener('click', () => { if (currentPage > 1) { currentPage--; loadLogs(); } });
            document.getElementById('nextPage').addEventListener('click', () => { currentPage++; loadLogs(); });

            window.addEventListener('DOMContentLoaded', () => {
                const hash = window.location.hash.substring(1);
                if (hash === 'user') {
                    switchTab('user');
                } else {
                    switchTab('admin');
                }
            });
        </script>

