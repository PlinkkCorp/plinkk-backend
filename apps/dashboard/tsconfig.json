{
    "compilerOptions": {
        "moduleResolution": "node16",
        "types": ["node"],
        "lib": ["ES2021"],
        "module": "node16",
        "target": "es2022",
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["dist", "src/public"]
}