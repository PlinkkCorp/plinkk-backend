<%- include('partials/head.ejs', { title: 'Logs Admin - Administration' ,
    description: 'Historique des actions administratives.' , robots: 'noindex,nofollow' }) %>
    <%- include('partials/header-dash.ejs', { user: user }) %>

        <div class="max-w-[1600px] mx-auto grid grid-cols-12 gap-6 px-4 py-8">
            <%- include('partials/admin-nav.ejs', { user: user, active: 'logs' }) %>

                <main class="col-span-12 lg:col-span-10 space-y-8">
                    <div
                        class="flex flex-col md:flex-row md:items-center justify-between gap-4 bg-gradient-to-r from-slate-900 to-slate-800 p-8 rounded-3xl border border-slate-800 relative overflow-hidden">
                        <div
                            class="absolute top-0 right-0 w-64 h-64 bg-blue-600/20 rounded-full blur-3xl -mr-16 -mt-16 pointer-events-none">
                        </div>
                        <div class="relative z-10">
                            <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">Logs d'Audit</h1>
                            <p class="text-slate-400 text-lg">Historique des actions effectuées par les administrateurs
                                et les utilisateurs.</p>
                        </div>
                    </div>

                    <div class="flex items-center gap-2 p-1 bg-slate-900 border border-slate-800 rounded-2xl w-fit">
                        <button onclick="switchTab('admin')" id="tab-admin"
                            class="px-6 py-2.5 rounded-xl text-sm font-bold transition-all duration-200 bg-blue-600 text-white shadow-lg shadow-blue-900/20">
                            Logs Staff
                        </button>
                        <button onclick="switchTab('user')" id="tab-user"
                            class="px-6 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 text-slate-400 hover:text-white hover:bg-slate-800">
                            Logs Utilisateurs
                        </button>
                    </div>

                    <div
                        class="bg-slate-900 border border-slate-800 rounded-3xl p-4 mb-6 flex flex-wrap gap-4 items-end">
                        <div class="flex flex-col gap-1">
                            <label id="labelAdmin" class="text-xs text-slate-400 uppercase font-bold">Acteur
                                (ID)</label>
                            <input type="text" id="filterAdmin" placeholder="ID..."
                                class="bg-slate-950 border border-slate-800 rounded-xl px-3 py-2 text-sm text-white focus:outline-none focus:border-blue-500 transition-colors">
                        </div>
                        <div class="flex flex-col gap-1">
                            <label class="text-xs text-slate-400 uppercase font-bold">Cible (ID)</label>
                            <input type="text" id="filterTarget" placeholder="ID..."
                                class="bg-slate-950 border border-slate-800 rounded-xl px-3 py-2 text-sm text-white focus:outline-none focus:border-blue-500 transition-colors">
                        </div>
                        <div class="flex flex-col gap-1">
                            <label class="text-xs text-slate-400 uppercase font-bold">Action</label>
                            <select id="filterAction"
                                class="bg-slate-950 border border-slate-800 rounded-xl px-3 py-2 text-sm text-white focus:outline-none focus:border-blue-500 transition-colors">
                                <option value="">Toutes</option>
                            </select>
                            <select id="filterActionAdmin" class="hidden">
                                <option value="">Toutes</option>
                                <option value="LOGIN">Connexion</option>
                                <option value="IMPERSONATE">Impersonnification</option>
                                <option value="UPDATE_PROFILE">Modif. Profil</option>
                                <option value="UPDATE_USER_PROFILE">Modif. Profil (API)</option>
                                <option value="BAN_USER">Bannissement</option>
                                <option value="UNBAN_USER">Débannissement</option>
                                <option value="REVOKE_SESSION">Révocation Session</option>
                                <option value="REVOKE_ALL_SESSIONS">Révocation (Toutes)</option>
                                <option value="UPDATE_USER_ROLE">Modif. Rôle (API)</option>
                                <option value="UPDATE_ROLE">Modif. Rôle</option>
                                <option value="UPDATE_BADGES">Modif. Badges</option>
                                <option value="DISABLE_2FA">Désactiver 2FA</option>
                                <option value="CREATE_ROLE">Création Rôle</option>
                                <option value="UPDATE_ROLE">Modif. Rôle</option>
                                <option value="DELETE_ROLE">Suppr. Rôle</option>
                                <option value="MANAGE_THEME">Thèmes</option>
                                <option value="RUN_TASK">Tâches Système</option>
                            </select>
                            <select id="filterActionUser" class="hidden">
                                <option value="">Toutes</option>
                                <option value="LOGIN">Connexion</option>
                                <option value="REGISTER">Inscription</option>
                                <option value="UPDATE_PROFILE">Modif. Profil</option>
                                <option value="CHANGE_PASSWORD">Modif. Password</option>
                                <option value="CHANGE_EMAIL">Modif. Email</option>
                                <option value="UPDATE_AVATAR">Modif. Photo Profil</option>
                                <option value="CREATE_PLINKK">Création Plinkk</option>
                                <option value="UPDATE_PLINKK">Modif. Plinkk</option>
                                <option value="DELETE_PLINKK">Suppr. Plinkk</option>
                                <option value="CREATE_REDIRECT">Création Redirection</option>
                                <option value="UPDATE_REDIRECT">Modif. Redirection</option>
                                <option value="DELETE_REDIRECT">Suppr. Redirection</option>
                                <option value="CREATE_THEME">Création Thème</option>
                                <option value="UPDATE_THEME">Modif. Thème</option>
                                <option value="DELETE_THEME">Suppr. Thème</option>
                                <option value="CREATE_API_KEY">Création Clé API</option>
                                <option value="LINK_DNS">Liaison DNS</option>
                                <option value="REVOKE_SESSION">Révocation Session</option>
                                <option value="CONNECT_ACCOUNT">Liaison Compte</option>
                            </select>
                        </div>
                        <div class="flex flex-col gap-1">
                            <label class="text-xs text-slate-400 uppercase font-bold">De</label>
                            <input type="date" id="filterFrom"
                                class="bg-slate-950 border border-slate-800 rounded-xl px-3 py-2 text-sm text-white focus:outline-none focus:border-blue-500 transition-colors">
                        </div>
                        <div class="flex flex-col gap-1">
                            <label class="text-xs text-slate-400 uppercase font-bold">À</label>
                            <input type="date" id="filterTo"
                                class="bg-slate-950 border border-slate-800 rounded-xl px-3 py-2 text-sm text-white focus:outline-none focus:border-blue-500 transition-colors">
                        </div>
                        <div class="flex flex-col gap-1">
                            <label class="text-xs text-slate-400 uppercase font-bold">Tri</label>
                            <select id="sortOrder"
                                class="bg-slate-950 border border-slate-800 rounded-xl px-3 py-2 text-sm text-white focus:outline-none focus:border-blue-500 transition-colors">
                                <option value="desc">Récent d'abord</option>
                                <option value="asc">Ancien d'abord</option>
                            </select>
                        </div>
                        <button onclick="currentPage=1; loadLogs()"
                            class="px-6 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-xl font-medium transition-colors h-[38px]">Filtrer</button>
                    </div>

                    <div class="bg-slate-900 border border-slate-800 rounded-3xl overflow-hidden">
                        <div class="overflow-x-auto">
                            <table class="w-full text-left border-collapse">
                                <thead>
                                    <tr
                                        class="border-b border-slate-800 bg-slate-950/50 text-xs uppercase tracking-wider text-slate-400">
                                        <th class="px-6 py-4 font-medium">Date</th>
                                        <th id="headerUser" class="px-6 py-4 font-medium">Admin</th>
                                        <th class="px-6 py-4 font-medium">Action</th>
                                        <th class="px-6 py-4 font-medium">Cible</th>
                                        <th class="px-6 py-4 font-medium">Détails</th>
                                        <th class="px-6 py-4 font-medium">IP</th>
                                        <th class="px-6 py-4 font-medium"></th>
                                    </tr>
                                </thead>
                                <tbody id="logsTableBody" class="text-sm text-slate-300 divide-y divide-slate-800">
                                    <tr>
                                        <td colspan="7" class="px-6 py-8 text-center text-slate-500">Chargement...</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="p-4 border-t border-slate-800 bg-slate-950/30 flex justify-between items-center"
                            id="paginationControls">
                            <button id="prevPage"
                                class="px-4 py-2 rounded-xl bg-slate-800 hover:bg-slate-700 text-white text-sm disabled:opacity-50">Précédent</button>
                            <span id="pageInfo" class="text-slate-400 text-sm">Page 1</span>
                            <button id="nextPage"
                                class="px-4 py-2 rounded-xl bg-slate-800 hover:bg-slate-700 text-white text-sm disabled:opacity-50">Suivant</button>
                        </div>
                    </div>
                </main>
        </div>

        <!-- Modal Détails Log -->
        <div id="logDetailsModal" class="fixed inset-0 z-50 hidden">
            <div class="absolute inset-0 bg-black/80 backdrop-blur-xl transition-all duration-300"
                onclick="closeLogDetails()"></div>
            <div
                class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-2xl bg-slate-900/90 border border-slate-700/50 rounded-[2.5rem] shadow-[0_0_50px_-12px_rgba(0,0,0,0.5)] p-0 overflow-hidden ring-1 ring-white/10">
                <!-- Header -->
                <div class="p-8 pb-4 flex justify-between items-start">
                    <div>
                        <div class="flex items-center gap-3 mb-2">
                            <div class="p-2.5 bg-violet-600/20 rounded-2xl border border-violet-500/30">
                                <svg class="w-5 h-5 text-violet-400" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                                    </path>
                                </svg>
                            </div>
                            <h2 class="text-2xl font-black text-white tracking-tight">Détails de l'activité</h2>
                        </div>
                        <p class="text-slate-500 text-xs font-mono bg-slate-800/50 px-3 py-1 rounded-full border border-slate-700/50 w-fit"
                            id="modalLogId"></p>
                    </div>
                    <button onclick="closeLogDetails()"
                        class="p-3 hover:bg-slate-800 rounded-2xl text-slate-500 hover:text-white transition-all transform hover:rotate-90">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M18 6L6 18M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>

                <div class="p-8 pt-4 space-y-6 max-h-[70vh] overflow-y-auto custom-scrollbar">
                    <!-- Info Brutes -->
                    <div class="grid grid-cols-2 gap-4">
                        <div
                            class="bg-slate-950/40 rounded-3xl p-5 border border-slate-800/50 group hover:border-blue-500/30 transition-colors">
                            <label
                                class="text-[10px] text-slate-500 uppercase font-bold block mb-2 tracking-widest flex items-center gap-2">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                                    </path>
                                </svg>
                                Horodatage
                            </label>
                            <div id="modalDate"
                                class="text-white font-mono text-sm group-hover:text-blue-400 transition-colors"></div>
                        </div>
                        <div
                            class="bg-slate-950/40 rounded-3xl p-5 border border-slate-800/50 group hover:border-emerald-500/30 transition-colors">
                            <label
                                class="text-[10px] text-slate-500 uppercase font-bold block mb-2 tracking-widest flex items-center gap-2">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 20l-5.447-2.724A2 2 0 013 15.487V6.513a2 2 0 011.553-1.943l1.9-0.475a4 4 0 011.547 0l1.9 0.475A2 2 0 0111.447 6.513v8.974a2 2 0 01-0.553 1.289l-1.9 0.475a4 4 0 01-1.547 0z">
                                    </path>
                                </svg>
                                Adresse IP
                            </label>
                            <div id="modalIp"
                                class="text-white font-mono text-sm group-hover:text-emerald-400 transition-colors">
                            </div>
                        </div>
                    </div>

                    <!-- Acteur -->
                    <div class="bg-slate-950/40 rounded-3xl p-5 border border-slate-800/50 shadow-inner">
                        <label class="text-[10px] text-slate-500 uppercase font-bold block mb-4 tracking-widest">Acteur
                            du log</label>
                        <div class="flex items-center gap-4">
                            <div class="relative">
                                <div class="w-14 h-14 rounded-2xl bg-blue-600/10 flex items-center justify-center text-xl font-black text-blue-400 border border-blue-500/20 shadow-lg"
                                    id="modalAdminAvatar"></div>
                                <div
                                    class="absolute -bottom-1 -right-1 w-5 h-5 bg-emerald-500 border-4 border-slate-900 rounded-full">
                                </div>
                            </div>
                            <div>
                                <div id="modalAdminName" class="text-white text-lg font-bold tracking-tight"></div>
                                <div id="modalAdminId" class="text-slate-500 text-[10px] font-mono mt-0.5 opacity-60">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action -->
                    <div class="bg-slate-950/40 rounded-3xl p-5 border border-slate-800/50">
                        <label
                            class="text-[10px] text-slate-500 uppercase font-bold block mb-3 tracking-widest">Évènement</label>
                        <div class="flex flex-col gap-3">
                            <div class="flex items-center gap-3">
                                <div class="h-10 px-4 flex items-center justify-center rounded-xl bg-violet-600/10 text-violet-400 border border-violet-500/20 text-xs font-black font-mono tracking-tighter"
                                    id="modalAction"></div>
                                <span class="text-slate-600 font-medium italic">sur la cible</span>
                                <div class="flex-1 bg-slate-900 rounded-xl px-4 py-2 border border-slate-800 text-white font-mono text-xs break-all shadow-inner"
                                    id="modalTarget"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Cible Utilisateur -->
                    <div id="modalTargetUserInfo"
                        class="hidden relative overflow-hidden bg-blue-600/5 rounded-3xl p-6 border border-blue-500/20">
                        <div class="absolute top-0 right-0 p-4 opacity-5 pointer-events-none">
                            <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 24 24">
                                <path
                                    d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z">
                                </path>
                            </svg>
                        </div>
                        <label
                            class="text-[10px] text-blue-400 uppercase font-bold block mb-4 tracking-widest">Utilisateur
                            Cible détecté</label>
                        <div class="flex items-center justify-between relative z-10">
                            <div class="flex items-center gap-4">
                                <div class="relative">
                                    <img id="modalTargetAvatar" src=""
                                        class="w-14 h-14 rounded-2xl border-2 border-blue-500/30 hidden shadow-xl no-invert">
                                    <div id="modalTargetAvatarPlaceholder"
                                        class="w-14 h-14 rounded-2xl bg-blue-600/20 border border-blue-500/20 flex items-center justify-center text-xl font-black text-blue-400">
                                    </div>
                                </div>
                                <div>
                                    <div id="modalTargetName" class="text-white text-lg font-bold tracking-tight"></div>
                                    <div id="modalTargetEmail" class="text-slate-400 text-xs font-medium opacity-80">
                                    </div>
                                </div>
                            </div>
                            <a id="modalTargetLink" href=""
                                class="px-5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white text-[11px] font-black rounded-2xl transition-all shadow-lg shadow-blue-900/40 transform hover:scale-105">
                                VOIR PROFIL
                            </a>
                        </div>
                    </div>

                    <!-- Métadonnées -->
                    <div class="space-y-3">
                        <div class="flex items-center justify-between mb-4 px-2">
                            <label
                                class="text-[10px] text-slate-500 uppercase font-bold tracking-widest flex items-center gap-2">
                                <svg class="w-3 h-3 text-emerald-500" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                                </svg>
                                Données additionnelles (JSON)
                            </label>
                            <button id="copyJsonBtn"
                                class="text-[10px] text-slate-500 hover:text-white flex items-center gap-1.5 transition-colors group">
                                <svg class="w-3 h-3 opacity-50 group-hover:opacity-100 transition-opacity" fill="none"
                                    stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3">
                                    </path>
                                </svg>
                                Copier la data
                            </button>
                        </div>
                        <div id="modalJson" class="grid grid-cols-1 gap-3"></div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="p-6 bg-slate-950/20 border-t border-slate-800/50 flex justify-between px-8">
                    <div>
                        <button id="btnRestoreState" onclick="restoreState()"
                            class="hidden px-6 py-3 bg-amber-600/10 hover:bg-amber-600/20 border border-amber-600/30 text-amber-500 hover:text-amber-400 text-xs font-bold rounded-2xl transition-all flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                            </svg>
                            Restaurer cet état
                        </button>
                    </div>
                    <button onclick="closeLogDetails()"
                        class="px-8 py-3 bg-slate-800 hover:bg-slate-700 text-white text-xs font-bold rounded-2xl transition-all border border-slate-700/50">
                        Fermer
                    </button>
                </div>
            </div>
        </div>

        <!-- Modal Gestion Utilisateur (repris de dash.ejs) -->
        <div id="userManageModal"
            class="fixed inset-0 hidden z-[2147483600] items-center justify-center backdrop-blur-md">
            <div class="absolute inset-0 bg-black/70 animate-fade-in" data-close></div>

            <div
                class="relative w-full max-w-5xl h-[85vh] bg-slate-900 flex overflow-hidden rounded-2xl shadow-2xl animate-scale-in mx-4 font-sans text-slate-200 border border-slate-800">

                <!-- Sidebar -->
                <div class="w-64 bg-slate-950 flex-shrink-0 flex flex-col border-r border-slate-800">
                    <div class="p-5 pb-2">
                        <div class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1.5">UTILISATEUR
                        </div>
                        <div id="umSidebarName" class="font-bold text-white truncate text-base">User</div>
                        <div id="umSidebarId" class="text-xs text-slate-500 truncate font-mono mt-0.5">@id</div>
                    </div>

                    <nav class="flex-1 px-3 py-2 space-y-1 overflow-y-auto custom-scrollbar" id="umTabsNav">
                        <button data-tab="overview"
                            class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors bg-slate-800 text-white ring-1 ring-slate-700">
                            <svg class="w-4 h-4 opacity-70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            Vue d'ensemble
                        </button>
                        <button data-tab="profile"
                            class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-slate-400 hover:text-slate-200 hover:bg-slate-900 transition-colors text-sm font-medium">
                            <svg class="w-4 h-4 opacity-70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
