            function showToast(message, type = 'info') {
                const toast = document.createElement('div');
                toast.className = `fixed bottom-6 right-6 z-[3000] flex items-center gap-3 px-6 py-4 rounded-2xl border backdrop-blur-xl shadow-2xl animate-slide-up-fade`;

                const colors = {
                    success: 'bg-emerald-500/10 border-emerald-500/20 text-emerald-400',
                    error: 'bg-rose-500/10 border-rose-500/20 text-rose-400',
                    info: 'bg-blue-500/10 border-blue-500/20 text-blue-400'
                };

                toast.classList.add(...colors[type].split(' '));
                toast.innerHTML = `
            <div class="w-2 h-2 rounded-full animate-pulse bg-current"></div>
            <span class="text-sm font-semibold tracking-wide">${message}</span>
        `;

                document.body.appendChild(toast);
                setTimeout(() => {
                    toast.classList.replace('animate-slide-up-fade', 'animate-fade-out');
                    setTimeout(() => toast.remove(), 400);
                }, 4000);
            }

