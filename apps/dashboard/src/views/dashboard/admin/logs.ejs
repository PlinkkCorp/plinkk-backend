                avatar.src = u.image;
                avatar.classList.remove('hidden');
                placeholder.classList.add('hidden');
            } else {
                avatar.classList.add('hidden');
                placeholder.classList.remove('hidden');
                placeholder.textContent = (u.userName || u.name || '?').charAt(0).toUpperCase();
            }
        } else {
            targetInfo.classList.add('hidden');
        }
        
        const jsonContainer = document.getElementById('modalJson');
        jsonContainer.innerHTML = '';
        
        const details = log.details || {};
        const keys = Object.keys(details).filter(k => k !== 'targetUser');

        if (keys.length > 0) {
            keys.forEach(key => {
                const value = details[key];
                const item = document.createElement('div');
                item.className = 'bg-slate-900/40 rounded-2xl p-4 border border-slate-800/50 flex flex-col gap-1 hover:bg-slate-900/60 transition-colors shadow-inner';
                
                const label = document.createElement('div');
                label.className = 'text-[9px] text-slate-500 uppercase font-black tracking-widest font-mono opacity-50';
                label.textContent = key;
                
                const val = document.createElement('div');
                val.className = 'text-emerald-400 font-mono text-xs break-all leading-relaxed tracking-tight';
                
                if (typeof value === 'object' && value !== null) {
                    val.textContent = JSON.stringify(value, null, 2);
                    val.className += ' whitespace-pre-wrap mt-1 bg-black/20 p-3 rounded-xl border border-white/5';
                } else {
                    val.textContent = value;
                }
                
                item.append(label, val);
                jsonContainer.appendChild(item);
            });
            
            document.getElementById('copyJsonBtn').onclick = () => {
                navigator.clipboard.writeText(JSON.stringify(details, null, 2));
                const btn = document.getElementById('copyJsonBtn');
                const originalText = btn.innerHTML;
                btn.innerHTML = '<span class="text-emerald-400 flex items-center gap-1">Copie ok !</span>';
                setTimeout(() => btn.innerHTML = originalText, 2000);
            };
            document.getElementById('copyJsonBtn').parentElement.classList.remove('hidden');
        } else {
            jsonContainer.innerHTML = `
