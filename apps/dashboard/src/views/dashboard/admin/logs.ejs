<!-- Modal D√©tails Log -->
<div id="logDetailsModal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/80 backdrop-blur-sm" onclick="closeLogDetails()"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-2xl bg-slate-900 border border-slate-800 rounded-3xl shadow-2xl p-6 max-h-[90vh] overflow-y-auto">
        <div class="flex justify-between items-start mb-6">
            <div>
                <h2 class="text-2xl font-bold text-white mb-1">D√©tails du Log</h2>
                <p class="text-slate-400 text-sm font-mono" id="modalLogId"></p>
            </div>
            <button onclick="closeLogDetails()" class="p-2 hover:bg-slate-800 rounded-xl text-slate-400 hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
        </div>
        
        <div class="space-y-6">
            <div class="grid grid-cols-2 gap-4">
                <div class="bg-slate-950 rounded-xl p-4 border border-slate-800">
                    <label class="text-xs text-slate-500 uppercase font-bold block mb-1">Date</label>
                    <div id="modalDate" class="text-white font-mono text-sm"></div>
                </div>
                <div class="bg-slate-950 rounded-xl p-4 border border-slate-800">
                    <label class="text-xs text-slate-500 uppercase font-bold block mb-1">IP</label>
                    <div id="modalIp" class="text-white font-mono text-sm"></div>
                </div>
            </div>

            <div class="bg-slate-950 rounded-xl p-4 border border-slate-800">
                <label class="text-xs text-slate-500 uppercase font-bold block mb-1">Administrateur</label>
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-full bg-blue-600 flex items-center justify-center text-xs font-bold text-white" id="modalAdminAvatar"></div>
                    <div>
                        <div id="modalAdminName" class="text-white font-medium"></div>
                        <div id="modalAdminId" class="text-slate-500 text-xs font-mono"></div>
                    </div>
                </div>
            </div>

            <div class="bg-slate-950 rounded-xl p-4 border border-slate-800">
                <label class="text-xs text-slate-500 uppercase font-bold block mb-1">Action & Cible</label>
                <div class="flex items-center gap-3 mb-2">
                    <span id="modalAction" class="px-2 py-1 rounded-lg bg-violet-500/20 text-violet-300 border border-violet-500/30 text-xs font-mono font-bold"></span>
                    <span class="text-slate-600">sur</span>
                    <div id="modalTargetContainer">
                        <span id="modalTarget" class="text-white font-mono text-sm"></span>
                    </div>
                </div>
            </div>

            <div id="modalTargetUserInfo" class="hidden bg-slate-950 rounded-xl p-4 border border-slate-800">
                <label class="text-xs text-slate-500 uppercase font-bold block mb-2">Utilisateur Cible</label>
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <img id="modalTargetAvatar" src="" class="w-10 h-10 rounded-full border border-slate-700 hidden">
                        <div id="modalTargetAvatarPlaceholder" class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center text-sm font-bold text-white"></div>
                        <div>
                            <div id="modalTargetName" class="text-white font-medium"></div>
                            <div id="modalTargetEmail" class="text-slate-500 text-xs"></div>
                        </div>
                    </div>
                    <a id="modalTargetLink" href="" class="px-4 py-2 bg-blue-600/10 hover:bg-blue-600/20 text-blue-400 text-xs rounded-lg transition-colors border border-blue-500/20">
                        Voir le Profil
                    </a>
                </div>
            </div>

            <div class="bg-slate-950 rounded-xl p-4 border border-slate-800">
                <label class="text-xs text-slate-500 uppercase font-bold block mb-3">M√©tadonn√©es / D√©tails</label>
                <div id="modalJson" class="space-y-3"></div>
            </div>
        </div>
    </div>
</div>

<script>
    let currentPage = 1;
    const limit = 50;
    let currentLogs = [];
    let currentTab = 'admin';

    function switchTab(tab) {
        currentTab = tab;
        currentPage = 1;
        
        const btnAdmin = document.getElementById('tab-admin');
        const btnUser = document.getElementById('tab-user');
        const labelAdmin = document.getElementById('labelAdmin');
        const headerUser = document.getElementById('headerUser');
        const filterAction = document.getElementById('filterAction');
        const sourceSelect = document.getElementById(tab === 'admin' ? 'filterActionAdmin' : 'filterActionUser');

        // Styles des boutons
        if (tab === 'admin') {
            btnAdmin.className = 'px-6 py-2.5 rounded-xl text-sm font-bold transition-all duration-200 bg-blue-600 text-white shadow-lg shadow-blue-900/20';
            btnUser.className = 'px-6 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 text-slate-400 hover:text-white hover:bg-slate-800';
            labelAdmin.textContent = 'Admin (ID)';
            headerUser.textContent = 'Admin';
        } else {
            btnUser.className = 'px-6 py-2.5 rounded-xl text-sm font-bold transition-all duration-200 bg-blue-600 text-white shadow-lg shadow-blue-900/20';
            btnAdmin.className = 'px-6 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 text-slate-400 hover:text-white hover:bg-slate-800';
            labelAdmin.textContent = 'Utilisateur (ID)';
            headerUser.textContent = 'Utilisateur';
        }

        // Mise √† jour des options de filtrage
        filterAction.innerHTML = sourceSelect.innerHTML;
        
        loadLogs();
    }

    function openLogDetails(index) {
        const log = currentLogs[index];
        if (!log) return;

        document.getElementById('modalLogId').textContent = `ID: ${log.id}`;
        document.getElementById('modalDate').textContent = new Date(log.createdAt).toLocaleString();
        document.getElementById('modalIp').textContent = log.ip || 'N/A';
        
        const userName = currentTab === 'admin' ? log.adminName : (log.userName || log.userId);
        const userId = currentTab === 'admin' ? log.adminId : log.userId;
        const userImage = currentTab === 'admin' ? log.adminImage : log.userImage;

        document.getElementById('modalAdminName').textContent = userName;
        document.getElementById('modalAdminId').textContent = userId;
        document.getElementById('modalAdminAvatar').textContent = (userName || '?').charAt(0).toUpperCase();
        
        document.getElementById('modalAction').textContent = log.action;
        document.getElementById('modalTarget').textContent = log.targetId || 'N/A';

        const targetInfo = document.getElementById('modalTargetUserInfo');
        if (log.targetUser) {
            targetInfo.classList.remove('hidden');
            const u = log.targetUser;
            document.getElementById('modalTargetName').textContent = u.userName || u.name || 'Inconnu';
            document.getElementById('modalTargetEmail').textContent = u.email || 'Pas d\'email';
            document.getElementById('modalTargetLink').href = `/admin?openUser=${u.id}`;
            
            const avatar = document.getElementById('modalTargetAvatar');
            const placeholder = document.getElementById('modalTargetAvatarPlaceholder');
            if (u.image) {
                avatar.src = u.image;
                avatar.classList.remove('hidden');
                placeholder.classList.add('hidden');
            } else {
                avatar.classList.add('hidden');
                placeholder.classList.remove('hidden');
                placeholder.textContent = (u.userName || u.name || '?').charAt(0).toUpperCase();
            }
        } else {
            targetInfo.classList.add('hidden');
        }
        
        const jsonContainer = document.getElementById('modalJson');
        jsonContainer.innerHTML = '';
        
        if (log.details && typeof log.details === 'object' && Object.keys(log.details).length > 0) {
            Object.entries(log.details).forEach(([key, value]) => {
                const item = document.createElement('div');
                item.className = 'bg-slate-900/50 rounded-xl p-3 border border-slate-800/50';
                
                const label = document.createElement('div');
                label.className = 'text-[10px] text-slate-500 uppercase font-bold mb-1 font-mono';
                label.textContent = key;
                
                const val = document.createElement('div');
                val.className = 'text-emerald-400 font-mono text-xs break-all';
                
                if (typeof value === 'object' && value !== null) {
                    val.textContent = JSON.stringify(value, null, 2);
                    val.className += ' whitespace-pre';
                } else {
                    val.textContent = value;
                }
                
                item.append(label, val);
                jsonContainer.appendChild(item);
            });
        } else {
            jsonContainer.innerHTML = '<div class="text-slate-600 text-xs italic py-2 text-center">Aucune donn√©e suppl√©mentaire</div>';
        }

        document.getElementById('logDetailsModal').classList.remove('hidden');
    }

    function closeLogDetails() {
        document.getElementById('logDetailsModal').classList.add('hidden');
    }

    async function loadLogs() {
        const tbody = document.getElementById('logsTableBody');
        tbody.innerHTML = '<tr><td colspan="7" class="px-6 py-8 text-center text-slate-500">Chargement...</td></tr>';
        
        const adminId = document.getElementById('filterAdmin').value;
        const action = document.getElementById('filterAction').value;
        const from = document.getElementById('filterFrom').value;
        const to = document.getElementById('filterTo').value;
        const sort = document.getElementById('sortOrder').value;

        const params = new URLSearchParams({
            page: currentPage,
            limit: limit,
            sort: sort
        });
        if (adminId) params.append('adminId', adminId);
        if (action) params.append('action', action);
        if (from) params.append('from', from);
        if (to) params.append('to', to);

        try {
            const endpoint = currentTab === 'admin' ? '/admin/logs/api' : '/admin/logs/user-api';
            const res = await fetch(`${endpoint}?${params.toString()}`);
            if (!res.ok) throw new Error('Erreur chargement');
            const data = await res.json();
            
            currentLogs = data.logs; // Store for modal access

            if (data.logs.length === 0) {
                tbody.innerHTML = '<tr><td colspan="7" class="px-6 py-8 text-center text-slate-500">Aucun log trouv√©.</td></tr>';
                return;
            }

            tbody.innerHTML = data.logs.map((log, index) => {
                let targetDisplay = '-';
                if (log.targetUser) {
                    const name = log.targetUser.userName || log.targetUser.name || 'Inconnu';
                    targetDisplay = `
                        <a href="/admin?openUser=${log.targetUser.id}" class="flex items-center gap-2 text-blue-400 hover:text-blue-300 transition-colors">
                            <div class="w-5 h-5 rounded-full bg-slate-800 flex items-center justify-center text-[8px] font-bold overflow-hidden border border-slate-700/50">
                                ${log.targetUser.image ? `<img src="${log.targetUser.image}" class="w-full h-full object-cover">` : name.charAt(0).toUpperCase()}
                            </div>
                            <span class="max-w-[120px] truncate">${name}</span>
                        </a>
                    `;
                } else if (log.targetId) {
                    targetDisplay = `<span class="text-slate-500 font-mono text-[10px] italic">${log.targetId}</span>`;
                }

                let detailsDisplay = '-';
                if (log.details && typeof log.details === 'object') {
                    const keys = Object.keys(log.details).filter(k => k !== 'targetUser');
                    
                    if (log.action === 'REVOKE_SESSION' || log.action === 'REVOKE_ALL_SESSIONS') {
                        const count = log.details.count || 1;
                        const targetName = log.targetUser ? (log.targetUser.userName || log.targetUser.name) : (log.details.targetUser?.name || 'Inconnu');
                        detailsDisplay = `
                            <div class="flex flex-col gap-1">
                                <span class="text-rose-400/90 font-medium text-[10px] flex items-center gap-1">
                                    <span>üõ°Ô∏è</span>
                                    ${log.action === 'REVOKE_SESSION' ? 'Session r√©voqu√©e' : `${count} sessions r√©voqu√©es`}
                                </span>
                                <div class="text-[9px] text-slate-400 flex items-center gap-1 bg-slate-800/50 px-1.5 py-0.5 rounded border border-slate-700/50 w-fit">
                                    <span>üë§</span>
                                    User : ${targetName}
                                </div>
                            </div>
                        `;
                    } else if (keys.length > 0) {
                        detailsDisplay = `<div class="flex flex-wrap gap-1 max-w-sm">` + 
                            keys.map(k => {
                                let val = log.details[k];
                                let valStr = typeof val === 'object' ? JSON.stringify(val) : val;
                                return `<span class="inline-flex items-center px-1.5 py-0.5 rounded bg-slate-800/40 border border-slate-700/50">
                                    <span class="text-slate-500 mr-1 font-bold text-[9px] uppercase">${k}:</span>
                                    <span class="text-slate-300 font-mono text-[10px] truncate max-w-[100px]">${valStr}</span>
                                </span>`;
                            }).join('') + 
                        `</div>`;
                    }
                }

                const uName = currentTab === 'admin' ? log.adminName : (log.userName || log.userId);
                const uImage = currentTab === 'admin' ? log.adminImage : log.userImage;

                return `
                <tr class="hover:bg-slate-800/50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap text-slate-400 font-mono text-xs">${new Date(log.createdAt).toLocaleString()}</td>
                    <td class="px-6 py-4 font-medium text-white">
                        <div class="flex items-center gap-2">
                            <div class="w-6 h-6 rounded-full bg-slate-800 flex items-center justify-center text-[10px] font-bold overflow-hidden border border-slate-700">
                                ${uImage ? `<img src="${uImage}" class="w-full h-full object-cover">` : (uName || '?').charAt(0).toUpperCase()}
                            </div>
                            <span class="max-w-[150px] truncate">${uName}</span>
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        <span class="px-2 py-1 rounded-lg bg-slate-800 border border-slate-700 text-xs font-mono text-violet-300">${log.action}</span>
                    </td>
                    <td class="px-6 py-4 text-slate-400 font-mono text-xs">${targetDisplay}</td>
                    <td class="px-6 py-4 text-slate-500 text-[11px]">
                        ${detailsDisplay}
                    </td>
                    <td class="px-6 py-4 text-slate-500 font-mono text-xs">${log.ip || '-'}</td>
                    <td class="px-6 py-4 text-right">
                        <button onclick="openLogDetails(${index})" class="px-3 py-1.5 bg-slate-800 hover:bg-slate-700 text-white text-xs rounded-lg transition-colors">
                            Voir
                        </button>
                    </td>
                </tr>
            `}).join('');

            const totalPages = Math.ceil(data.total / limit);
            document.getElementById('pageInfo').textContent = `Page ${currentPage} / ${totalPages || 1}`;
            document.getElementById('prevPage').disabled = currentPage <= 1;
            document.getElementById('nextPage').disabled = currentPage >= totalPages;

        } catch (e) {
            tbody.innerHTML = '<tr><td colspan="7" class="px-6 py-8 text-center text-rose-500">Erreur lors du chargement des logs.</td></tr>';
        }
    }

    document.getElementById('prevPage').addEventListener('click', () => {
        if (currentPage > 1) { currentPage--; loadLogs(); }
    });
    document.getElementById('nextPage').addEventListener('click', () => {
        currentPage++; loadLogs();
    });

    window.addEventListener('DOMContentLoaded', () => {
        switchTab('admin');
    });
</script>
</body>
</html>
