<script>
  (function(){
    var triggers = document.querySelectorAll('.openLicenseModal');
    var modal = document.getElementById('licenseModal');
    var closeBtn = document.getElementById('closeLicenseModal');
    if (!modal) return;
    function open(){ modal.classList.remove('hidden'); modal.classList.add('flex'); document.body.style.overflow = 'hidden'; }
    function close(){ modal.classList.remove('flex'); modal.classList.add('hidden'); document.body.style.overflow = ''; }
    if (triggers && triggers.length) {
      triggers.forEach(function(t){ t.addEventListener('click', function(e){ e.preventDefault(); open(); }); });
    }
    if (closeBtn) closeBtn.addEventListener('click', function(e){ e.preventDefault(); close(); });
    // clicking on backdrop
    var backdrop = modal.querySelector('[data-close]'); if (backdrop) backdrop.addEventListener('click', close);
    // close on Esc
    document.addEventListener('keydown', function(e){ if (e.key === 'Escape') close(); });
  })();
</script>
