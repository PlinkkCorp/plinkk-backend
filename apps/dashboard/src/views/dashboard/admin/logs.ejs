                        <div class="flex items-center gap-2 cursor-pointer group/target" onclick="event.stopPropagation(); openUserModal('${log.targetUser.id}')">    
                            <div class="w-5 h-5 rounded-full bg-slate-800 flex items-center justify-center text-[8px] font-bold overflow-hidden border border-slate-700/50 group-hover/target:border-blue-500 transition-colors">
                                ${log.targetUser.image ? `<img src="${log.targetUser.image}" class="w-full h-full object-cover">` : name.charAt(0).toUpperCase()}
                            </div>
                            <span class="max-w-[120px] truncate group-hover/target:text-blue-400 transition-colors">${name}</span>
                        </div>
                    `;
                } else if (log.targetId) {
                    targetDisplay = `<span class="text-slate-500 font-mono text-[10px] italic cursor-pointer hover:text-blue-400 transition-colors" onclick="event.stopPropagation(); openUserModal('${log.targetId}')">${log.targetId}</span>`;
                }

                const uName = currentTab === 'admin' ? log.adminName : (log.userName || log.userId);
                const uImage = currentTab === 'admin' ? log.adminImage : log.userImage;

                return `
                <tr class="hover:bg-slate-800/50 transition-colors border-b border-slate-800/30 last:border-0" onclick="openLogDetails(${index})">
                    <td class="px-6 py-4 whitespace-nowrap text-slate-500 font-mono text-[11px]">${new Date(log.createdAt).toLocaleString()}</td>
                    <td class="px-6 py-4">
                        <div class="flex items-center gap-2 cursor-pointer group/source" onclick="event.stopPropagation(); openUserModal('${userId}')">
                            <div class="w-7 h-7 rounded-lg bg-slate-800 flex items-center justify-center text-[10px] font-bold overflow-hidden border border-slate-700/50 shadow-inner group-hover/source:border-blue-500 transition-colors">
                                ${uImage ? `<img src="${uImage}" class="w-full h-full object-cover">` : (uName || '?').charAt(0).toUpperCase()}
                            </div>
                            <span class="text-white text-sm font-medium tracking-tight group-hover/source:text-blue-400 transition-colors">${uName}</span>
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        <span class="px-2.5 py-1 rounded-lg bg-violet-600/10 border border-violet-500/20 text-[10px] font-bold font-mono text-violet-400 tracking-wider">${log.action}</span>
                    </td>
                    <td class="px-6 py-4 text-slate-400 font-mono text-xs">${targetDisplay}</td>
                    <td class="px-6 py-4">
                        <div class="flex items-center gap-1.5 text-slate-500 text-[10px]">
                            <span class="w-1.5 h-1.5 rounded-full ${log.details && Object.keys(log.details).length > 0 ? 'bg-emerald-500' : 'bg-slate-700'}"></span>
                            ${log.details && Object.keys(log.details).length > 0 ? 'Détails dispos' : 'Aucun détail'}
                        </div>
                    </td>
                    <td class="px-6 py-4 text-slate-500 font-mono text-[10px]">${log.ip || '-'}</td>
                    <td class="px-6 py-4 text-right">
                        <button class="p-2 hover:bg-slate-700 rounded-lg text-slate-500 hover:text-white transition-all">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                        </button>
                    </td>
                </tr>
            `}).join('');

            const totalPages = Math.ceil(data.total / limit);
            document.getElementById('pageInfo').textContent = `Page ${currentPage} / ${totalPages || 1}`;
            document.getElementById('prevPage').disabled = currentPage <= 1;
            document.getElementById('nextPage').disabled = currentPage >= totalPages;

        } catch (e) {
            tbody.innerHTML = '<tr><td colspan="7" class="px-6 py-8 text-center text-rose-500">Erreur lors du chargement des logs.</td></tr>';
        }
    }

    document.getElementById('prevPage').addEventListener('click', () => {
        if (currentPage > 1) { currentPage--; loadLogs(); }
    });
    document.getElementById('nextPage').addEventListener('click', () => {
        currentPage++; loadLogs();
    });

    window.addEventListener('DOMContentLoaded', () => {
        switchTab('admin');
    });
</script>
