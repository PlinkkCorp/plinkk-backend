FROM node:24-alpine

# Installation des dépendances système
RUN apk add --no-cache \
    openssl \
    libc6-compat \
    bash \
    python3 \
    make \
    g++ \
    cairo-dev \
    pango-dev \
    jpeg-dev \
    giflib-dev \
    pixman-dev \
    pangomm-dev

WORKDIR /app

COPY . .

RUN npm install -g pnpm@9.12.3

ENV CI=true

ENV DATABASE_URL="postgresql://dummy:dummy@localhost:5432/dummy"

RUN pnpm install

RUN pnpm --filter @plinkk/prisma run generate || npx prisma generate --schema=packages/prisma/prisma/schema.prisma

RUN pnpm --filter @plinkk/prisma install

RUN openssl rand -out apps/dashboard/src/secret-key 32

RUN pnpm --filter @plinkk/dashboard run build

CMD ["sh", "-c", "pnpm --filter @plinkk/prisma run generate && pnpm --filter @plinkk/prisma run deploy && pnpm --filter @plinkk/dashboard run start"]

EXPOSE 3001
