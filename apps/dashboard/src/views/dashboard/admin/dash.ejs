            // Quick approve theme function
            async function quickApproveTheme(themeId) {
                try {
                    const res = await fetch('/api/themes/' + themeId + '/approve', { method: 'POST' });
                    if (!res.ok) throw new Error('Erreur HTTP ' + res.status);
                    // Remove the theme item from the list
                    const item = document.querySelector(`li button[onclick*="${themeId}"]`)?.closest('li');
                    if (item) {
                        item.style.transition = 'all 0.3s';
                        item.style.opacity = '0';
                        item.style.transform = 'translateX(20px)';
                        setTimeout(() => {
                            item.remove();
                            // Update pending count
                            const countEl = document.querySelector('.text-amber-400.text-2xl, h3.text-2xl');
                            if (countEl) {
                                const current = parseInt(countEl.textContent) || 0;
                                if (current > 0) countEl.textContent = current - 1;
                            }
                        }, 300);
                    }
                    showToast('Thème approuvé avec succès', 'success');
                } catch (err) {
                    showToast('Erreur: ' + err.message, 'error');
                }
            }

