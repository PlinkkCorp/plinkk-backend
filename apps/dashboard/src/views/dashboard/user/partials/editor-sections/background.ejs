<div class="mb-6 pb-4 border-b border-slate-800">
    <h3 class="text-lg font-semibold text-white">Arrière-plan</h3>
    <p class="text-sm text-slate-400">Personnalise l'ambiance visuelle de ton profil.</p>
</div>

<div class="space-y-6">
    <div>
        <label class="block text-sm font-medium text-slate-300 mb-3">Type d'arrière-plan</label>
        <input type="hidden" id="backgroundType" value="<%= plinkk.backgroundType || 'color' %>">
        <div class="grid grid-cols-5 p-1 bg-slate-950 rounded-xl mb-6 border border-slate-800">
            <button type="button" data-bg-type="color"
                class="bg-type-btn py-2 text-xs font-medium rounded-lg transition-all <%= (plinkk.backgroundType || 'color') === 'color' ? 'bg-white shadow text-slate-900' : 'text-slate-400 hover:text-white hover:bg-slate-800' %>">
                Couleur
            </button>
            <button type="button" data-bg-type="gradient"
                class="bg-type-btn py-2 text-xs font-medium rounded-lg transition-all <%= plinkk.backgroundType === 'gradient' ? 'bg-white shadow text-slate-900' : 'text-slate-400 hover:text-white hover:bg-slate-800' %>">
                Dégradé
            </button>
            <button type="button" data-bg-type="image"
                class="bg-type-btn py-2 text-xs font-medium rounded-lg transition-all flex items-center justify-center gap-1.5 <%= plinkk.backgroundType === 'image' ? 'bg-white shadow text-slate-900' : 'text-slate-400 hover:text-white hover:bg-slate-800' %>">
                Image <span class="text-[8px] bg-slate-800 text-slate-400 px-1 rounded">Bientôt</span>
            </button>
            <button type="button" data-bg-type="video"
                class="bg-type-btn py-2 text-xs font-medium rounded-lg transition-all flex items-center justify-center gap-1.5 <%= plinkk.backgroundType === 'video' ? 'bg-white shadow text-slate-900' : 'text-slate-400 hover:text-white hover:bg-slate-800' %>">
                Vidéo <span class="text-[8px] bg-slate-800 text-slate-400 px-1 rounded">Bientôt</span>
            </button>
            <button type="button" data-bg-type="canvas"
                class="bg-type-btn py-2 text-xs font-medium rounded-lg transition-all <%= plinkk.backgroundType === 'canvas' ? 'bg-white shadow text-slate-900' : 'text-slate-400 hover:text-white hover:bg-slate-800' %>">
                Canvas
            </button>
        </div>

        <!-- Couleur Unie -->
        <div id="bg-options-color"
            class="bg-options space-y-4 <%= (plinkk.backgroundType || 'color') !== 'color' ? 'hidden' : '' %>">
            <div class="p-4 rounded-xl bg-slate-950 border border-slate-800">
                <label class="block text-sm font-medium text-slate-400 mb-3">Couleur de fond</label>
                <div class="flex items-center gap-3">
                    <input type="color" id="bgColor" value="<%= plinkk.backgroundColor || '#0f172a' %>"
                        class="h-10 w-20 rounded-lg bg-transparent cursor-pointer border-none" />
                    <input type="text" id="bgColorText" value="<%= plinkk.backgroundColor || '#0f172a' %>"
                        class="flex-1 px-3 py-2 rounded-lg bg-slate-900 border border-slate-700 text-slate-200 text-sm font-mono focus:border-violet-500 outline-none transition-all" />
                </div>
            </div>
        </div>

        <!-- Dégradé -->
        <div id="bg-options-gradient"
            class="bg-options space-y-6 <%= plinkk.backgroundType !== 'gradient' ? 'hidden' : '' %>">
            <div class="p-4 rounded-xl bg-slate-950 border border-slate-800 space-y-4">
                <div class="flex items-center justify-between mb-2">
                    <label class="block text-sm font-medium text-slate-300">Couleurs du dégradé</label>
                    <button type="button" id="addGradientColor"
                        class="text-xs text-violet-400 hover:text-violet-300 font-medium flex items-center gap-1">
                        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        Ajouter
                    </button>
                </div>

                <div id="gradient-colors-list" class="space-y-3">
                    <% if (plinkk.background && plinkk.background.length> 0) { %>
                        <% plinkk.background.forEach((colorObj, index)=> { %>
                            <div
                                class="gradient-color-entry flex items-center gap-3 p-2 bg-slate-900 rounded-lg border border-slate-800">
                                <input type="color"
                                    class="gradient-color-picker h-8 w-12 rounded bg-transparent cursor-pointer border-none"
                                    value="<%= colorObj.color %>">
                                <div class="flex-1 space-y-1">
                                    <div class="flex justify-between text-[10px] text-slate-500 font-mono">
                                        <span>Position</span>
                                        <span class="stop-value-label">
                                            <%= colorObj.stop ?? Math.round((index / (plinkk.background.length - 1)) *
                                                100) %>%
                                        </span>
                                    </div>
                                    <input type="range"
                                        class="gradient-stop-range w-full h-1.5 bg-slate-800 rounded-lg appearance-none cursor-pointer accent-violet-500"
                                        min="0" max="100"
                                        value="<%= colorObj.stop ?? Math.round((index / (plinkk.background.length - 1)) * 100) %>">
                                </div>
                                <button type="button"
                                    class="remove-gradient-color text-slate-500 hover:text-red-400 transition-colors p-1">
                                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                        stroke-width="2">
                                        <path d="M18 6L6 18M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <!-- Default colors if none exist -->
                                    <div
                                        class="gradient-color-entry flex items-center gap-3 p-2 bg-slate-900 rounded-lg border border-slate-800">
                                        <input type="color"
                                            class="gradient-color-picker h-8 w-12 rounded bg-transparent cursor-pointer border-none"
                                            value="#0f172a">
                                        <div class="flex-1 space-y-1">
                                            <div class="flex justify-between text-[10px] text-slate-500 font-mono">
                                                <span>Position</span>
                                                <span class="stop-value-label">0%</span>
                                            </div>
                                            <input type="range"
                                                class="gradient-stop-range w-full h-1.5 bg-slate-800 rounded-lg appearance-none cursor-pointer accent-violet-500"
                                                min="0" max="100" value="0">
                                        </div>
                                    </div>
                                    <div
                                        class="gradient-color-entry flex items-center gap-3 p-2 bg-slate-900 rounded-lg border border-slate-800">
                                        <input type="color"
                                            class="gradient-color-picker h-8 w-12 rounded bg-transparent cursor-pointer border-none"
                                            value="#1e293b">
                                        <div class="flex-1 space-y-1">
                                            <div class="flex justify-between text-[10px] text-slate-500 font-mono">
                                                <span>Position</span>
                                                <span class="stop-value-label">100%</span>
                                            </div>
                                            <input type="range"
                                                class="gradient-stop-range w-full h-1.5 bg-slate-800 rounded-lg appearance-none cursor-pointer accent-violet-500"
                                                min="0" max="100" value="100">
                                        </div>
                                    </div>
                                    <% } %>
                </div>

                <div class="pt-4 border-t border-slate-800">
                    <label class="block text-sm font-medium text-slate-400 mb-4">Angle du dégradé</label>
                    <div class="flex items-center gap-6">
                        <div class="relative w-16 h-16 flex-shrink-0">
                            <div id="degDial" class="deg-dial w-full h-full" tabindex="0" role="slider"
                                aria-label="Angle du dégradé" aria-valuemin="0" aria-valuemax="360"
                                aria-valuenow="<%= plinkk.gradientDegree || 135 %>">
                                <div class="deg-dial-dot"></div>
                            </div>
                        </div>
                        <div class="flex-1">
                            <div class="flex items-center gap-2 mb-1">
                                <input type="number" id="degBackgroundColor" value="<%= plinkk.gradientDegree || 135 %>"
                                    min="0" max="360"
                                    class="w-16 px-2 py-1.5 text-center rounded-lg bg-slate-900 border border-slate-700 text-white font-mono text-sm focus:border-violet-500 outline-none" />
                                <span class="text-slate-500 text-xs">degrés</span>
                            </div>
                            <p class="text-[10px] text-slate-500">Maintiens et glisse sur le cercle.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Canvas -->
        <div id="bg-options-canvas"
            class="bg-options space-y-6 <%= plinkk.backgroundType !== 'canvas' ? 'hidden' : '' %>">
            <div class="p-4 rounded-xl bg-slate-950 border border-slate-800 space-y-4">
                <div class="flex items-center justify-between">
                    <div>
                        <span class="block text-sm font-medium text-slate-200">Animation Canvas</span>
                        <span class="block text-xs text-slate-500">Choisissez une animation interactive pour votre fond
                            d'écran.</span>
                    </div>
                </div>

                <div class="space-y-3">
                    <label class="block text-xs font-medium text-slate-400">Choisir une animation</label>
                    <input type="hidden" id="selectedCanvasIndex" value="<%= plinkk.selectedCanvasIndex || 0 %>">
                    <div id="canvas-list" class="grid grid-cols-1 gap-2 max-h-60 overflow-y-auto pr-2 custom-scrollbar">
                        <!-- Populated by index.js -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Vidéo -->
        <div id="bg-options-video"
            class="bg-options space-y-4 <%= plinkk.backgroundType !== 'video' ? 'hidden' : '' %>">
            <div class="p-4 rounded-xl bg-slate-950 border border-slate-800 relative overflow-hidden">
                <div class="absolute inset-0 bg-slate-900/60 backdrop-blur-[2px] z-10 flex items-center justify-center">
                    <span class="px-3 py-1 bg-violet-600 text-white text-xs font-bold rounded-full shadow-lg">Bientôt
                        disponible</span>
                </div>
                <label class="block text-sm font-medium text-slate-400 mb-3">Vidéo d'arrière-plan (.mp4)</label>
                <div class="flex flex-col gap-3">
                    <div class="flex items-center gap-2">
                        <input type="url" id="backgroundVideo" value="<%= plinkk.backgroundVideo || '' %>"
                            class="flex-1 px-3 py-2.5 rounded-lg bg-slate-900 border border-slate-700 focus:border-violet-500 outline-none text-slate-200 text-sm"
                            placeholder="https://exemple.com/video.mp4" />
                        <button type="button" data-upload-for="backgroundVideo" data-field="backgroundVideo"
                            class="upload-btn shrink-0 p-2.5 rounded-lg bg-violet-600 hover:bg-violet-500 text-white transition-colors">
                            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                                <polyline points="17 8 12 3 7 8" />
                                <line x1="12" y1="3" x2="12" y2="15" />
                            </svg>
                        </button>
                        <input type="file" id="uploadBackgroundVideo" accept="video/mp4" class="hidden" />
                    </div>
                    <p class="text-[10px] text-slate-500 italic">Prend en charge les liens directs MP4.</p>
                </div>
            </div>
        </div>

        <!-- Image -->
        <div id="bg-options-image"
            class="bg-options space-y-4 <%= plinkk.backgroundType !== 'image' ? 'hidden' : '' %>">
            <div class="p-4 rounded-xl bg-slate-950 border border-slate-800 relative overflow-hidden">
                <div class="absolute inset-0 bg-slate-900/60 backdrop-blur-[2px] z-10 flex items-center justify-center">
                    <span class="px-3 py-1 bg-violet-600 text-white text-xs font-bold rounded-full shadow-lg">Bientôt
                        disponible</span>
                </div>
                <label class="block text-sm font-medium text-slate-400 mb-3">Image d'arrière-plan</label>
                <div class="flex flex-col gap-4">
                    <div class="flex items-center gap-2">
                        <input type="url" id="backgroundImage" value="<%= plinkk.backgroundImage || '' %>"
                            class="flex-1 px-3 py-2.5 rounded-lg bg-slate-900 border border-slate-700 focus:border-violet-500 outline-none text-slate-200 text-sm"
                            placeholder="https://exemple.com/image.jpg" />
                        <button type="button" data-picker-for="backgroundImage"
                            class="picker-btn shrink-0 p-2.5 rounded-lg bg-slate-800 hover:bg-slate-700 text-slate-200 transition-colors"
                            title="Choisir une image">
                            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="7" height="7"></rect>
                                <rect x="14" y="3" width="7" height="7"></rect>
                                <rect x="14" y="14" width="7" height="7"></rect>
                                <rect x="3" y="14" width="7" height="7"></rect>
                            </svg>
                        </button>
                        <button type="button" data-upload-for="backgroundImage" data-field="backgroundImage"
                            class="upload-btn shrink-0 p-2.5 rounded-lg bg-violet-600 hover:bg-violet-500 text-white transition-colors"
                            title="Uploader une image">
                            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                                <polyline points="17 8 12 3 7 8" />
                                <line x1="12" y1="3" x2="12" y2="15" />
                            </svg>
                        </button>
                        <input type="file" id="uploadBackgroundImage" accept="image/*" class="hidden" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>