  <script>
    function getQueryVariable(variable) {
      const query = window.location.search.substring(1);
      const vars = query.split('&');
      for (const v of vars) {
        const pair = v.split('=');
        if (pair[0] === variable) return decodeURIComponent(pair[1] || '');
      }
      return '';
    }

    function showError(message) {
      document.querySelectorAll('.errorClass').forEach(el => {
        el.textContent = message;
        el.className = 'errorClass p-3 rounded-xl bg-rose-500/10 border border-rose-500/20 text-rose-400 text-sm animate-shake';
        el.addEventListener('animationend', () => el.classList.remove('animate-shake'), { once: true });
      });
    }

    const state = { current: 'login' };

    function updateTabsUI(which) {
      const tabLogin = document.getElementById('tabLogin');
      const tabSignup = document.getElementById('tabSignup');
      const indicator = document.getElementById('tabIndicator');
      const isLogin = which === 'login';

      tabLogin.className = `py-4 text-sm font-semibold transition-colors duration-300 ${isLogin ? 'text-white' : 'text-slate-400 hover:text-slate-200'}`;
      tabSignup.className = `py-4 text-sm font-semibold transition-colors duration-300 ${!isLogin ? 'text-white' : 'text-slate-400 hover:text-slate-200'}`;
      tabLogin.setAttribute('aria-selected', isLogin);
      tabSignup.setAttribute('aria-selected', !isLogin);

      indicator.style.transform = isLogin ? 'translateX(0%)' : 'translateX(100%)';
      indicator.className = `tab-indicator absolute bottom-0 left-0 w-1/2 h-0.5 ${isLogin ? 'bg-gradient-to-r from-violet-500 to-indigo-500' : 'bg-gradient-to-r from-emerald-500 to-teal-500'}`;
    }

    function activateTab(which) {
      if (which === state.current) return;

      const login = document.getElementById('loginForm');
      const signup = document.getElementById('signupForm');
      const fromEl = state.current === 'login' ? login : signup;
      const toEl = which === 'login' ? login : signup;

      fromEl.style.opacity = '0';
      fromEl.style.transform = which === 'login' ? 'translateX(20px)' : 'translateX(-20px)';

      setTimeout(() => {
        fromEl.classList.add('hidden');
        toEl.classList.remove('hidden');
        toEl.style.opacity = '0';
        toEl.style.transform = which === 'login' ? 'translateX(-20px)' : 'translateX(20px)';

        requestAnimationFrame(() => {
          toEl.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
          toEl.style.opacity = '1';
          toEl.style.transform = 'translateX(0)';
        });
      }, 200);

      state.current = which;
      updateTabsUI(which);
    }

    function attachPasswordToggles() {
      document.querySelectorAll('[data-toggle]').forEach(btn => {
        const target = document.querySelector(btn.getAttribute('data-toggle'));
        if (!target) return;

        btn.addEventListener('click', () => {
          const isPwd = target.type === 'password';
          target.type = isPwd ? 'text' : 'password';

          const eyeOpen = btn.querySelector('.eye-open');
          const eyeClosed = btn.querySelector('.eye-closed');

          if (isPwd) {
            eyeOpen.classList.add('hidden');
            eyeClosed.classList.remove('hidden');
          } else {
            eyeOpen.classList.remove('hidden');
            eyeClosed.classList.add('hidden');
          }
        });
      });
    }

    async function handleGoogleCredentialResponse(response) {
      try {
        const res = await fetch('/auth/google/callback', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ credential: response.credential })
        });

        const data = await res.json();

        if (res.ok && data.success) {
          window.location.href = data.redirect || '/';
        } else {
          console.error('Erreur login:', data.error);
          const errorEl = document.querySelector('.errorClass');
          if (errorEl) {
            errorEl.textContent = "Erreur lors de la connexion avec Google.";
            errorEl.style.color = "#ef4444";
            errorEl.style.textAlign = "center";
            errorEl.style.marginTop = "1rem";
          }
        }
      } catch (e) {
        console.error('Erreur réseau:', e);
      }
    }


    // Auto-generate username from email
    function generateUsernameFromEmail(email) {
      if (!email || !email.includes('@')) return '';
      let local = email.split('@')[0];
      // Remove special chars, keep alphanumeric and dots/dashes/underscores
      local = local.replace(/[^a-zA-Z0-9._-]/g, '').toLowerCase();
      // Trim to max length
      if (local.length > 30) local = local.substring(0, 30);
      if (local.length < 3) local = local + Math.floor(Math.random() * 900 + 100);
      return local;
    }

    // Password strength checker 
    function checkPasswordStrength(pwd) {
      let score = 0;
      if (pwd.length >= 8) score++;
      if (pwd.length >= 12) score++;
      if (/[A-Z]/.test(pwd) && /[a-z]/.test(pwd)) score++;
      if (/[0-9]/.test(pwd) && /[^a-zA-Z0-9]/.test(pwd)) score++;
      return Math.min(score, 4);
    }

    function updatePasswordStrength(pwd) {
      const bars = document.querySelectorAll('#pwdStrengthBar [data-bar]');
      const text = document.getElementById('pwdStrengthText');
      if (!bars.length || !text) return;

      const score = checkPasswordStrength(pwd);
      const colors = ['bg-rose-500', 'bg-orange-500', 'bg-amber-400', 'bg-emerald-500'];
      const labels = ['Faible', 'Moyen', 'Bon', 'Excellent'];

      bars.forEach((bar, i) => {
        bar.className = bar.className.replace(/bg-\S+/g, '');
        if (i < score) {
          bar.classList.add('h-1', 'flex-1', 'rounded-full', 'transition-colors', 'duration-300', colors[score - 1]);
        } else {
          bar.classList.add('h-1', 'flex-1', 'rounded-full', 'transition-colors', 'duration-300', 'bg-slate-700');
        }
      });

      if (pwd.length > 0) {
        text.textContent = labels[score - 1] || 'Trop court';
        text.className = 'text-xs mt-1 ' + (score >= 3 ? 'text-emerald-400' : score >= 2 ? 'text-amber-400' : 'text-rose-400');
      } else {
        text.textContent = '';
        text.className = 'text-xs text-slate-500 mt-1';
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      const err = getQueryVariable('error');
      if (err) showError(err);

      document.getElementById('tabLogin').addEventListener('click', () => activateTab('login'));
      document.getElementById('tabSignup').addEventListener('click', () => activateTab('signup'));
      document.getElementById('switchToSignup').addEventListener('click', () => activateTab('signup'));
      document.getElementById('switchToLogin').addEventListener('click', () => activateTab('login'));

      // Pre-fill email from query param
      const prefillEmail = getQueryVariable('email');
      const signupEmail = document.getElementById('signupEmail');
      const signupUsername = document.getElementById('signupUsername');

      if (prefillEmail && signupEmail) {
        signupEmail.value = prefillEmail;
        // Auto-generate username
        if (signupUsername) {
          signupUsername.value = generateUsernameFromEmail(prefillEmail);
        }
      }

      // Auto-generate username as user types email
      if (signupEmail && signupUsername) {
        let userEditedUsername = false;
        signupUsername.addEventListener('input', () => { userEditedUsername = true; });
        signupEmail.addEventListener('input', () => {
          if (!userEditedUsername) {
            signupUsername.value = generateUsernameFromEmail(signupEmail.value);
          }
        });
      }

      // Password strength indicator
      const pwdInput = document.getElementById('signupPassword');
      if (pwdInput) {
        pwdInput.addEventListener('input', () => updatePasswordStrength(pwdInput.value));
      }

      if (location.hash === '#signup') activateTab('signup');
      updateTabsUI(state.current);
      attachPasswordToggles();

      // Trigger animations
      document.querySelectorAll('.animate-fade-up').forEach(el => {
        el.style.opacity = '1';
      });
    });
  </script>
