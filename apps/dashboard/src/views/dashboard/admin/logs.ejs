        document.getElementById('modalLogId').textContent = `ID: ${log.id}`;
        document.getElementById('modalDate').textContent = new Date(log.createdAt).toLocaleString();
        document.getElementById('modalIp').textContent = log.ip || 'N/A';
        
        const userName = currentTab === 'admin' ? log.adminName : (log.userName || log.userId);
